<% if flash[:notice] %>
  <div class="alert alert-success text-center">
    <%= notice %>
  </div>
<% end %>
<div class="content">
  <main>
    <div class="__head">
      <h2>質問を見る</h2>
      <ul>
        <li><a href="#">アクティブ</a></li>
        <li><a href="#">人気</a></li>
        <li><a href="#">今週</a></li>
        <li><a href="#">今月</a></li>
      </ul>
    </div>
    <div class="main-tag">
      <a href="#" class="tag">javascript</a>
      <a href="#" class="tag">swift</a>
      <a href="#" class="tag">ios</a>
      <a href="#" class="tag">android</a>
      <a href="#" class="tag">ruby-on-rails</a>
      <a href="#" class="tag">php</a>
      <a href="#" class="tag">java</a>
      <a href="#" class="tag">ruby</a>
      <a href="#" class="tag">python</a>
      <a href="#" class="tag">monaca</a>
      <a href="#" class="other">その他の&nbsp;タグ</a>
    </div>
    <div class="q-wrap">
      <div class="new-post-activity info-alert"><a href="#">1件の質問が更新されました</a></div>
      <ul class="q-list">
      <% @questions.each do |question| %>
        <li class="q-item">
          <div class="count-wrap fx">
            <div class="votes">
              <p><%= question.vote_count %><sapn class="num-text">票</sapn></p>
            </div>
            <div class="status">
              <p><%= question.answers.count %><span class="num-text">回答</span></p>
            </div>
            <div class="views">
              <p><span class="num-text">閲覧数</span></p>
            </div>
          </div>
          <div class="summary">
            <h3>
              <%= link_to question.title, question_path(question),method:"get", class:"q-title" %>
            </h3>
              <a class="tag">python</a>
              <a class="tag">centos</a>

            <div class="log">
              <p>更新日時: <%= time_ago_in_words question.user.created_at %>前</p>
              <a><%= question.user.name %></a>
              <p><%= question.user.reputation_count %></p>
            </div>
          </div>
        </li>
      <% end %>
      </ul>
    </div>
    <a id="moreQuestions" class="button" href="#">質問をもっと見る</a>
  </main>


  <div id="sidebar" class="mt5">
    <button class="question-buttton"><a href="/questions/new/">質問する</a></button>
    <div class="info-block" id="site-status">
      <h4 class="title">サイト統計情報</h4>
        <ul>
        <li><span class="stats-value"><%= @questions.count %></span><span class="stats-label">質問</span></li>
        <li><span class="stats-value"><%= @answers.count %></span><span class="stats-label">回答</span></li>
        <li>
          <span class="stats-value"><%= (@answers.select(:question_id).uniq.count.to_f / @questions.count.to_f * 100).floor %>％</span><span class="stats-label">回答済</span>
        </li>
        <li><span class="stats-value"><%= @users.count %></span><span class="stats-label">ユーザー</span></li>
        <li><span class="stats-value">8,122</span><span class="stats-label">訪問／日</span></li>
        </ul>
    </div>

