<div class="sigin_and_signup_content">
  <h2 class="login_title">パスワードを忘れてしまいましたか？</h2>
  <p class="text-center">パスワード確認メールを送信する</p>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", :required => true, class:"login_from" %>
    <div class="actions">
      <%= f.submit "送信",class:"login_btn" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
