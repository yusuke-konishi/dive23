<div class="sigin_and_signup_content">
  <h2 class="login_title">スタック・オーバーフロー は Stack Exchange ネットワークの168 Q&amp;Aコミュニティの一員です。</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p class="login_title">メールアドレスでログイン</p>
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", :required => true, class:"login_from" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード",:required => true, class:"login_form" %>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end -%>
    <div class="actions">
      <%= f.submit "ログイン",class:"login_btn" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
