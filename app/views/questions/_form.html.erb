<%= form_for(@question) do |f| %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: "edit-title", placeholder:"プログラミングに関しての質問は何ですか？具体的に書いてください。",required:true%>
  <%= f.text_area :content, class: "editor",required:true %>

  <%= f.label :tag_list, "キーワード" %>
  <%= f.text_field :tag_list, value: @question.tag_list.join(',') %>
  <!--<input type="text" class="edit-tags" name="edit-tag" placeholder="(css java ruby) のようなタグが少なくとも 1 つ必要です。最高タグ数は 5 です">-->
  <%= f.submit '投稿する',class:"submit-button"%>
<% end %>

