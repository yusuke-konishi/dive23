<% if user_signed_in? %>
<% if current_user.bookmarks.find_by(question_id: @question.id).present? %>
  <%= render 'bookmarks/unclip', question: @question %>
<% else %>
  <%= render 'bookmarks/clip', question: @question %>
<% end %>
<% else %>
<%= link_to 'お気に入りにするには、ログインまたは登録してください。', new_user_session_path  %>
<% end %>
